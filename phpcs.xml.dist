<?xml version="1.0"?>
<ruleset name="Plugin rules">
    <!-- Mantém o padrão do Moodle -->
    <rule ref="moodle"/>

    <!-- Exclui o sniff específico -->
    <exclude name="Universal.WhiteSpace.CommaSpacing.TooMuchSpaceAfterCommaBeforeTrailingComment"/>

    <!-- Exclui todos os sniffs do padrão PSR12 -->
    <exclude name="PSR12"/>
</ruleset>
